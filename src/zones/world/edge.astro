---
import SkyLayout from "@/layouts/SkyLayout.astro";
---

<SkyLayout title="Exit" bg="plain" class="edge">
  <h1 class="sr-only">Exit</h1>

  <section class="arrival-card">
    <p class="ambient">Nothing follows from here.</p>
    <p class="ambient">You may close this.</p>

    <p style="margin-top:1.5rem; opacity:0.45; font-size:0.85rem;">
      <a href="/" style="
        text-decoration:none;
        color:inherit;
        opacity:0.6;
        letter-spacing:0.04em;
      ">back</a>
    </p>
  </section>
</SkyLayout>
