---
import SkyLayout from "../../../layouts/SkyLayout.astro";
---

<SkyLayout title="Paul · Arrival" bg="sky">
  <style>
    :root{
      --ink: rgba(255,255,255,.92);
      --mist: rgba(255,255,255,.78);
      --edge: rgba(255,255,255,.12);
      --coin: rgba(200,180,120,.22);
      --coin2: rgba(200,180,120,.10);
    }

    .wrap{max-width: 920px; margin: 0 auto; padding: 28px 18px;}

    .panel{
      border-radius: 18px;
      border: 1px solid rgba(255,255,255,.12);
      overflow: hidden;
      background:
        radial-gradient(900px 520px at 50% 24%, rgba(255,255,255,.05), rgba(0,0,0,0)),
        radial-gradient(760px 420px at 50% 78%, var(--coin2), rgba(0,0,0,0)),
        linear-gradient(180deg, rgba(0,0,0,.18), rgba(0,0,0,.72));
      box-shadow:
        inset 0 0 140px rgba(0,0,0,.45),
        inset 0 0 60px rgba(0,0,0,.22),
        0 26px 90px rgba(0,0,0,.32);
      backdrop-filter: blur(10px);
    }

    .head{
      padding: 18px 18px 10px;
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 12px;
    }

    h1{
      margin: 0;
      font-size: 28px;
      color: var(--ink);
      letter-spacing: .01em;
    }

    .sig{
      font-size: 11px;
      letter-spacing: .16em;
      text-transform: uppercase;
      opacity: .7;
      color: rgba(255,255,255,.80);
      border: 1px solid rgba(255,255,255,.14);
      padding: 5px 10px;
      border-radius: 999px;
      background: rgba(0,0,0,.16);
      white-space: nowrap;
    }

    .sub{
      margin: 0;
      padding: 0 18px 16px;
      max-width: 72ch;
      color: var(--mist);
      font-size: 13px;
      line-height: 1.55;
    }

    .choices{
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 12px;
      padding: 0 18px 18px;
    }

    @media (max-width: 820px){
      .choices{ grid-template-columns: 1fr; }
    }

    .tile{
      display: block;
      text-decoration: none;
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(0,0,0,.14);
      padding: 14px;
      color: var(--ink);
      box-shadow: 0 16px 46px rgba(0,0,0,.22);
      transition: transform 140ms ease, border-color 140ms ease, opacity 140ms ease;
      opacity: .92;
    }

    .tile:hover,
    .tile:focus-visible{
      transform: translateY(-2px);
      border-color: rgba(200,180,120,.32);
      outline: none;
      opacity: 1;
    }

    .k{
      font-size: 11px;
      letter-spacing: .16em;
      text-transform: uppercase;
      opacity: .7;
      color: rgba(255,255,255,.78);
    }

    .t{
      margin-top: 8px;
      font-size: 16px;
      letter-spacing: .01em;
    }

    .d{
      margin-top: 6px;
      font-size: 12px;
      line-height: 1.45;
      color: rgba(255,255,255,.74);
    }

    .nav{
      padding: 14px 18px 18px;
      border-top: 1px solid rgba(255,255,255,.08);
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      opacity: .72;
      font-size: 12px;
      letter-spacing: .08em;
      text-transform: uppercase;
    }

    .nav a{
      color: rgba(255,255,255,.82);
      text-decoration: none;
    }
    .nav a:hover{ color: rgba(255,255,255,.95); }
    .dot{ opacity: .45; margin: 0 .45rem; }
  </style>

  <div class="wrap">
    <section class="panel">
      <div class="head">
        <h1>Paul · Arrival</h1>
        <div class="sig">A Coin</div>
      </div>

      <p class="sub">
        Landing page. Choose where to go in this track.
      </p>

      <div class="choices">
        <a class="tile" href="/track/paul/room">
          <div class="k">Room</div>
          <div class="t">Working Space</div>
          <div class="d">Enter the room surface (in progress).</div>
        </a>

        <a class="tile" href="/track/paul">
          <div class="k">Gate</div>
          <div class="t">Return to Threshold</div>
          <div class="d">Back to passkey gate (this device).</div>
        </a>
      </div>

      <nav class="nav">
        <a href="/courtyard">courtyard</a>
        <span class="dot">•</span>
        <a href="/walk">walk</a>
        <span class="dot">•</span>
        <a href="/edge">edge</a>
      </nav>
    </section>
  </div>
</SkyLayout>
