---
import SkyLayout from "../layouts/SkyLayout.astro";

// TEMP: courtyard state wiring is paused while we switch to image base.
// If you want state logic back, we’ll reintroduce it cleanly later.
---

<SkyLayout title="Courtyard" bg="sky" class="courtyard">
  <div class="courtyard-scene">
    <div class="courtyard-image" aria-hidden="true"></div>
    <div class="courtyard-veil" aria-hidden="true"></div>
  </div>

  <style>
    .courtyard-scene{
      position: relative;
      width: min(1100px, 94vw);
      height: min(70vh, 720px);
      margin: 0 auto;
      border-radius: 18px;
      overflow: hidden;
    }

    .courtyard-image{
      position: absolute;
      inset: 0;
      background: url("/images/courtyard/courtyard-base.jpg") center bottom / cover no-repeat;
      filter: saturate(0.95) contrast(1.05);
    }

    .courtyard-veil{
      position: absolute;
      inset: 0;
      background:
        radial-gradient(900px 520px at 50% 40%, rgba(0,0,0,0.00), rgba(0,0,0,0.38)),
        linear-gradient(to bottom, rgba(0,0,0,0.05), rgba(0,0,0,0.55));
      pointer-events: none;
    }

    nav{
      margin-top: 1.25rem;
      text-align: center;
    }
    nav .dot{
      opacity: .45;
      margin: 0 .75rem;
    }
  </style>

  <nav>
    <a class="enter" href="/orientation">orientation</a>
    <span class="dot">•</span>
    <a class="enter" href="/now">now</a>
    <span class="dot">•</span>
    <a class="enter" href="/discovery">discovery</a>
    <span class="dot">•</span>
    <a class="enter" href="/walk">walk</a>
    <span class="dot">•</span>
    <a class="enter" href="/edge">exit</a>
  </nav>
</SkyLayout>

