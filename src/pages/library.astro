---
import SkyLayout from "../layouts/SkyLayout.astro";
---

<SkyLayout title="Library" bg="sky">
  <style>
    :root{
      --ink: rgba(255,255,255,.90);
      --mist: rgba(255,255,255,.70);
      --edge: rgba(255,255,255,.12);
      --candle: rgba(255,205,140,.14);
    }

    .wrap{
      width: min(1120px, 94vw);
      margin: 0 auto;
      padding: 24px;
      border-radius: 18px;
      border: 1px solid rgba(255,255,255,.10);
      overflow: hidden;

      background:
        radial-gradient(1200px 700px at 50% 22%, rgba(255,255,255,.06), rgba(0,0,0,.90)),
        radial-gradient(760px 420px at 50% 78%, var(--candle), rgba(0,0,0,0)),
        linear-gradient(180deg, rgba(0,0,0,.22), rgba(0,0,0,.76));

      box-shadow:
        inset 0 0 160px rgba(0,0,0,.55),
        inset 0 0 60px rgba(0,0,0,.25),
        0 28px 90px rgba(0,0,0,.35);
    }

    .top{
      display:flex;
      justify-content:space-between;
      align-items:flex-start;
      gap: 16px;
      margin-bottom: 16px;
    }

    h1{ margin:0; font-size:28px; color:var(--ink); }
    .sub{
      margin:6px 0 0;
      font-size:13px;
      line-height:1.5;
      color:var(--mist);
      max-width: 70ch;
    }

    .nav{
      display:flex; gap:10px; flex-wrap:wrap;
      justify-content:flex-end; align-items:center;
      opacity:.72; font-size:12px; letter-spacing:.08em;
      text-transform:uppercase;
    }
    .nav a{ color:var(--mist); text-decoration:none; }
    .nav a:hover{ color:var(--ink); }
    .dot{ opacity:.45; }

    .grid{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      position:relative;
      z-index:1;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns:1fr; }
      .nav{ justify-content:flex-start; }
    }

    .panel{
      border-radius:16px;
      border:1px solid rgba(255,255,255,.12);
      background:rgba(0,0,0,.16);
      box-shadow: 0 18px 55px rgba(0,0,0,.25);
      backdrop-filter: blur(10px);
      overflow:hidden;
      padding: 14px;
    }

    .k{
      font-size:11px;
      letter-spacing:.16em;
      text-transform:uppercase;
      opacity:.65;
      margin-bottom: 10px;
    }

    .item{
      display:flex;
      justify-content:space-between;
      gap: 12px;
      padding: 10px 10px;
      border-radius: 14px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(0,0,0,.18);
      color: var(--ink);
      text-decoration:none;
      margin-bottom: 10px;
    }
    .item:hover{ background: rgba(0,0,0,.24); }

    .meta{
      font-size: 12px;
      opacity: .60;
      letter-spacing: .08em;
      text-transform: uppercase;
      white-space: nowrap;
    }

    .note{
      margin: 0;
      color: var(--mist);
      font-size: 13px;
      line-height: 1.55;
      opacity: .85;
    }
  </style>

  <div class="wrap">
    <div class="top">
      <div>
        <h1>Library</h1>
        <p class="sub">A quiet catalog surface. Structure first. Content later.</p>
      </div>

      <nav class="nav" aria-label="Library navigation">
        <a href="/walk">walk</a><span class="dot">•</span>
        <a href="/courtyard">courtyard</a><span class="dot">•</span>
        <a href="/now">now</a><span class="dot">•</span>
        <a href="/edge">exit</a>
      </nav>
    </div>

    <div class="grid">
      <section class="panel" aria-label="Shelves">
        <div class="k">Shelves</div>

        <!-- placeholders (no links yet). Replace href later. -->
        <a class="item" href="#" aria-disabled="true" onclick="return false;">
          <span>Codex</span><span class="meta">pending</span>
        </a>

        <a class="item" href="#" aria-disabled="true" onclick="return false;">
          <span>Plates</span><span class="meta">pending</span>
        </a>

        <a class="item" href="#" aria-disabled="true" onclick="return false;">
          <span>Tracks</span><span class="meta">pending</span>
        </a>

        <a class="item" href="#" aria-disabled="true" onclick="return false;">
          <span>Registry</span><span class="meta">pending</span>
        </a>

        <p class="note">This page is intentionally sparse. Add shelves only when a surface exists.</p>
      </section>

      <section class="panel" aria-label="Notes">
        <div class="k">Notes</div>
        <p class="note">
          Library is a surface, not a dump. It lists only stable entry points.
          Unbuilt sections remain “pending” until their pages exist.
        </p>
      </section>
    </div>
  </div>
</SkyLayout>
